<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_margin="@dimen/card_view_margin"
    app:cardCornerRadius="@dimen/card_view_cardCornerRadius"
    app:cardElevation="@dimen/card_view_cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/im_diavolo" />

        <TextView
            android:id="@+id/card_view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_view_text_default_margin"
            android:layout_marginBottom="@dimen/card_view_text_default_margin"
            tools:text="Diavolo" />

    </LinearLayout>

</android.support.v7.widget.CardView>
